<h1>Create New User</h1>
<%= form_for(@user) do |f| %>
<label>Name:</label><br>
  <%= f.text_field :name %>
<label>Password:</label><br>
  <%= f.password_field :password %>
<label>Confirm Password:</label><br>
  <%= f.password_field :password_confirmation %><br>
  <%= f.submit "Sign up" %>
<% end %>
